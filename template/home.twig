<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=1140">
    <link rel="stylesheet" href="/style/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style/css/style.css">
    <title></title>
    <link rel="icon" type="image/png" href="/style/icons/favicon.png">
  </head>

  <body>
    <div id="top-bar">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>Тестовое задание</h1>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div id="userlist">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col"><button type="button" class="sort" data-sort="username">От:</button></th>
              <th scope="col"><button type="button" class="sort" data-sort="email">E-mail</button></th>
              <th scope="col">Описание задачи</th>
              <th scope="col"><button type="button" class="sort" data-sort="status">Статус</button></th>
              <th scope="col">Отредактировано</th>
            </tr>
          </thead>
          <tbody class="list"></tbody>
        </table>
        <div class="pages pagesBottom">
          <span>Страницы:</span>
          <nav aria-label="...">
            <ul id='paginationBottom' class="pagination paginationBottom pagination-sm"></ul>
          </nav>
        </div>
      </div>
    </div>

    <script src="/style/js/jquery-3.4.1.min.js"></script>
    <script src="/style/js/bootstrap.min.js"></script>
    <script src="/style/js/popper.min.js"></script>
    <script src="/style/js/list.min.js"></script>
    <script>
      var value_tmp = [
         'id',
         'username',
         'email',
         'descript',
         'status',
         { name: 'edited', attr: 'data-edited' },
       ];
      var list_options = {
        valueNames: value_tmp,
        item: '<tr>' 
          + '<th class="id" scope="row"></th>'
          + '</td><td class="username"></td>'
          + '<td class="email"></td>'
          + '<td class="descript"></td>'
          + '<td class="status"></td>'
          + '<td class="edited"></td>'
        + '</tr>',
        page: 3,
        pagination: [{
          paginationClass: 'paginationBottom',
          innerWindow: 2,
          left: 2,
          right: 2
        }],
      };
      var listjs = new List('userlist', list_options, {{ db|json_encode()|raw }});
    </script>
  </body>
</html>